<Page
    x:Class="TemplateStudio.Views.VacanciesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Style="{StaticResource PageStyle}"
    mc:Ignorable="d">
    <Grid x:Name="ContentArea" Margin="{StaticResource MediumLeftRightMargin}">
        <SplitView
            Name="splitView"
            PanePlacement="Right"
            OpenPaneLength="850"
            Margin="0, 50, 0, 0">
            <SplitView.Pane>
                <Grid Margin="0, 0, 0, 0">
                    <StackPanel Orientation="Vertical"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top">
                        <TextBlock Text="{x:Bind ViewModel.SelectedVacancies.Vacancies.Company,
                            UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                   FontFamily="Roboto"
                                   FontSize="40"
                                   FontWeight="SemiBold"
                                   Margin="30, 30, 0, 0"/>
                        <TextBlock Margin="20, 20, 20, 20"
                                   Text="{x:Bind ViewModel.SelectedVacancies.Vacancies.Description,
                                   Mode=TwoWay}"
                                   TextWrapping="Wrap"
                                   FontFamily="Roboto"
                                   FontSize="25"
                                   TextAlignment="Left"
                                   HorizontalAlignment="Center"/>

                    </StackPanel>
                </Grid>
            </SplitView.Pane>

            <SplitView.Content>
                <Border CornerRadius="10" Margin="100, 0, 100, 0">
                    <Grid
                        Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="5*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock
                    Grid.Column="0"
                    Text="Specialisations"
                    FontFamily="Roboto"
                    FontSize="40"
                    FontWeight="SemiBold"
                    Margin="30, 30 ,0 ,0"/>
