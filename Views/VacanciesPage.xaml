                        Margin="30,100,0,0"
                        VerticalAlignment="Top"
                        Width="120"
                        Height="40"
                        FontFamily="Roboto"
                        FontWeight="Bold"
                        Background="DodgerBlue"/>
                        <Button Content="Support"
                        Margin="170,100,0,0"
                        VerticalAlignment="Top"
                        Width="120"
                        Height="40"
                        FontFamily="Roboto"
                        FontWeight="Bold"
                        Background="DodgerBlue"/>
                        <Button Content="Techincal Writer"
                        Margin="310,100,0,0"
                        VerticalAlignment="Top"
                        Width="120"
                        Height="40"
                        FontFamily="Roboto"
                        FontWeight="Bold"
                        Background="DodgerBlue"/>
                        <Button Content="Architect"
                        Margin="30,160,0,0"
                        VerticalAlignment="Top"
                        Width="120"
                        Height="40"
                        FontFamily="Roboto"
                        FontWeight="Bold"
                        Background="DodgerBlue"/>
