                    Background="DodgerBlue"
                    FontWeight="Bold"/>
                        <Button
                    Content="Junior"
                    Margin="30, 800, 0, 0"
                    Width="400"
                    Height="40"
                    VerticalAlignment="Top"
                    Background="DodgerBlue"
                    FontWeight="Bold"/>
                        <Button
                    Content="Middle"
                    Margin="30, 850, 0, 0"
                    Width="400"
                    Height="40"
                    VerticalAlignment="Top"
                    Background="DodgerBlue"
                    FontWeight="Bold"/>
                        <Button
                    Content="Senior"
                    Margin="30, 900, 0, 0"
                    Width="400"
                    Height="40"
                    VerticalAlignment="Top"
                    Background="DodgerBlue"
                    FontWeight="Bold"/>
                        <TextBlock
                    Margin="30, 690, 0, 0"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Text="Level"
                    FontFamily="Roboto"
                    FontSize="40"
                    FontWeight="SemiBold"/>
                        <TextBlock
                    Grid.Column="1"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    FontFamily="Roboto"
                    FontSize="40"
                    FontWeight="SemiBold"
                    Text="Vacancies"
                    Margin="30, 30, 0, 0"/>
                        <GridView
                        Grid.Column="1"
                        Width="760"
                        Margin="0, 100, 0, 0"
                        IsItemClickEnabled="True"
                        SelectionMode="Single"
                        ItemsSource="{x:Bind ViewModel.Vacancies}"
                        ItemClick="{x:Bind ViewModel.Vacancies_ItemClick, Mode=OneWay}">

                            <GridView.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <StackPanel Orientation="Horizontal"
                                                    Width="500"
                                                    Height="75"
                                                    Margin="20, 0, 0, 0">
                                            <PersonPicture ProfilePicture="{Binding Vacancies.CompanyImageSource}"
                                                           Width="75"
                                                           Height="75"/>
                                            <StackPanel Orientation="Vertical">
                                                <TextBlock Text="{Binding Vacancies.Company}"
                                                           Margin="10, 5, 0, 0"
                                                           FontFamily="Roboto"
                                                           FontSize="18"/>
                                                <TextBlock Text="{Binding Vacancies.Position}"
                                                           Margin="10, 0, 0, 0"
                                                           FontFamily="Roboto"
                                                           FontSize="18"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </GridView.ItemTemplate>
                        </GridView>
                    </Grid>
                </Border>
            </SplitView.Content>

        </SplitView>
    </Grid>
</Page>
